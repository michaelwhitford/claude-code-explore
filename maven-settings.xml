<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- NOTE: This configuration attempts to use the container proxy -->
  <!-- The proxy is configured via environment variables -->
  <!-- Maven will use system properties http.proxyHost and http.proxyPort -->

  <proxies>
    <!-- HTTP Proxy Configuration -->
    <proxy>
      <id>anthropic-proxy</id>
      <active>true</active>
      <protocol>http</protocol>
      <host>21.0.0.189</host>
      <port>15004</port>
      <!-- Note: Maven's proxy auth doesn't support JWT-based auth directly -->
      <!-- We'll need to use environment-based configuration -->
    </proxy>
  </proxies>
</settings>
